# HTTPS
server {
	server_name yiannis-charalambous.com www.yiannis-charalambous.com ;
	root /var/www/yiannis-charalambous ;

	index index.html;

	location / {
		try_files $uri $uri/ /index.html =404 ;
	}

	listen [::]:443 ssl ipv6only=on; # managed by Certbot
	listen 443 ssl; # managed by Certbot
	ssl_certificate /etc/letsencrypt/live/yiannis-charalambous.com/fullchain.pem; # managed by Certbot
	ssl_certificate_key /etc/letsencrypt/live/yiannis-charalambous.com/privkey.pem; # managed by Certbot
	include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

# HTTP
server {
	if ($host = www.yiannis-charalambous.com) {
		return 301 https://$host$request_uri;
	} # managed by Certbot


	if ($host = yiannis-charalambous.com) {
		return 301 https://$host$request_uri;
	} # managed by Certbot


	listen 80 ;
	listen [::]:80 ;

	server_name yiannis-charalambous.com www.yiannis-charalambous.com ;
	return 404; # managed by Certbot
}
