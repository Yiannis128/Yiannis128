# HTTPS
server {
	server_name stats.yiannis-charalambous.com ;

	location / {
		proxy_pass http://localhost:3000;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header Host $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	}

	listen [::]:443 ssl; # managed by Certbot
	listen 443 ssl; # managed by Certbot
	
	ssl_certificate /etc/letsencrypt/live/stats.yiannis-charalambous.com/fullchain.pem; # managed by Certbot
	ssl_certificate_key /etc/letsencrypt/live/stats.yiannis-charalambous.com/privkey.pem; # managed by Certbot
	include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

# HTTP
server {
	if ($host = stats.yiannis-charalambous.com) {
		return 301 https://$host$request_uri;
	} # managed by Certbot

	server_name stats.yiannis-charalambous.com ;

	listen 80;
	listen [::]:80;
	return 404; # managed by Certbot
}
